            <script>


                $.ajax({
                    url: "/admin/viewWeeklyreport",
                    method: "GET",
                    success: (response) => {
                        console.log(response)
                        let daywise = response.Daywise;
                        let Monthly = response.Monthly;
                        let Today = response.Today;
                        let todaySale = response.todaySale

                        document.getElementById('TodaySale').innerHTML = response?.todaySale[0]?.totalAmount || 0;
                        document.getElementById('TodayOrders').innerHTML = response?.todaySale[0]?.count || 0;
                        document.getElementById('ThismonthOrders').innerHTML = Monthly[0]?.count;
                        document.getElementById('ThismonthRevenue').innerHTML = Monthly[0]?.totalAmount;

                        var xValues = [
                            daywise[0]._id.day,
                            daywise[1]._id.day,
                            daywise[2]._id.day,
                            daywise[3]._id.day,
                            daywise[4]._id.day,
                            daywise[5]._id.day,
                            daywise[6]._id.day,




                        ]
                        var yValues = [

                            daywise[0].count,
                            daywise[1].count,
                            daywise[2].count,
                            daywise[3].count,
                            daywise[4].count,
                            daywise[5].count,
                            daywise[6].count,


                            20,
                            0

                            //daywise[3].count,

                        ];

                        const data = {
                            labels: xValues,
                            datasets: [{
                                label: 'last Week Sales count',
                                backgroundColor: 'rgb(255, 99, 132)',
                                borderColor: 'rgb(255, 99, 132)',
                                data: yValues,
                            }]
                        };

                        const config = {
                            type: 'line',
                            data: data,
                            options: {
                                legend: { display: true },

                            }
                        };
                        const myChart = new Chart(
                            document.getElementById('myChart'),
                            config
                        );
                        // New Bar

                        // const labels = Utils.months({ count: 7 });
                        const labels = [daywise[0]._id.day,
                        daywise[1]._id.day,
                        daywise[2]._id.day,
                        daywise[3]._id.day,
                        daywise[4]._id.day,
                        ]
                        const data1 = {
                            labels: labels,
                            datasets: [{
                                label: 'last Week Revenue',
                                data: [daywise[0].totalAmount,
                                daywise[1].totalAmount,
                                daywise[2].totalAmount,
                                daywise[3].totalAmount,
                                daywise[4].totalAmount,

                                ],
                                backgroundColor: [
                                    'rgba(255, 99, 132, 0.2)',
                                    'rgba(255, 159, 64, 0.2)',
                                    'rgba(255, 205, 86, 0.2)',
                                    'rgba(75, 192, 192, 0.2)',
                                    'rgba(54, 162, 235, 0.2)',
                                    'rgba(153, 102, 255, 0.2)',
                                    'rgba(201, 203, 207, 0.2)'
                                ],
                                borderColor: [
                                    'rgb(255, 99, 132)',
                                    'rgb(255, 159, 64)',
                                    'rgb(255, 205, 86)',
                                    'rgb(75, 192, 192)',
                                    'rgb(54, 162, 235)',
                                    'rgb(153, 102, 255)',
                                    'rgb(201, 203, 207)'
                                ],
                                borderWidth: 1
                            }]
                        };
                        const config1 = {
                            type: 'bar',
                            data: data1,
                            options: {
                                scales: {
                                    y: {
                                        beginAtZero: true
                                    }
                                }
                            },
                        };
                        const barChart = new Chart(
                            document.getElementById('ChartPie'),
