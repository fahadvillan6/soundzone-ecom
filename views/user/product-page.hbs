<!-- Cart -->
<br><br>

<!-- breadcrumb -->
<div class="container">
  <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
    <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
      Home
      <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
    </a>

    <a href="/category/{{this.Category}}" class="stext-109 cl8 hov-cl1 trans-04">
      Categories
      <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
    </a>

    <span class="stext-109 cl4"> {{product.Name}} </span>
  </div>
</div>

<!-- Product Detail -->
<section class="sec-product-detail bg0 p-t-65 p-b-60">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-lg-7 p-b-30">
        <div class="p-l-25 p-r-30 p-lr-0-lg">
          <div class="wrap-slick3 flex-sb flex-w">
            <div class="wrap-slick3-dots"></div>
            <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

            <div class="slick3 gallery-lb">
              {{#each product.Images}}
              <div class="item-slick3" data-thumb="/products/{{this}}">
                <div class="wrap-pic-w pos-relative">
                  <img src="/products/{{this}}" />

                  <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" {{!--
                    href="../public/images/product-detail-01.jpg" --}} href="/products/{{this}}">
                    <i class="fa fa-expand"></i>
                  </a>
                </div>
              </div>
              {{/each}}

            </div>

          </div>
        </div>
      </div>

      <div class="col-md-6 col-lg-5 p-b-30">
        <div class="p-r-50 p-t-5 p-lr-0-lg">
          <h4 class="mtext-105 cl2 js-name-detail p-b-14" style="margin-left:10rem ; margin-top: 1rem;">
            {{product.Name}}
          </h4>

          <span class="mtext-106 cl2 text-danger" style="margin-left:12rem;"> {{product.SellingPrice}} </span>
          <span class="mtext- cl2" style="text-decoration-line: line-through;margin-left: 10px;">
            MRP: {{product.Price}}
          </span>
          <div class="flex-w flex-r-m p-b-10">
            <div class="size-204 flex-w flex-m respon6-next">
              {{#if Nostock}}
              <h4 class="text-danger">Out Of Stock</h4>
              {{else}}
              <form action="/add-tocart" method="post">
                <div class="wrap-num-product flex-w m-r-20 m-tb-10" style="margin-left:7rem ;">
                  <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                    <i class="fs-16 zmdi zmdi-minus" onclick="changeQty(-1)"></i>
                  </div>

                  <input id="quantity" class="mtext-104 cl3 txt-center num-product" type="number" name="productqnty"
                    value="1" min="1" readonly="readonly" />


                  <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                    <i class="fs-16 zmdi zmdi-plus" onclick="changeQty(1)"> </i>
                  </div>
                </div>
                {{!-- js-addcart-detail --}}
                <div class="d-flex">
                  <div>
                    <input id="proid" hidden value="{{product.id}}" name="productid">
                    <button type="submit" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 "
                      style="margin-right:1rem; margin-left: 0;">Add to cart
                    </button>

              </form>
            </div>
            <div>
              <form action="/checkout" method="post">
                <input hidden id="Qtybuy" name="Qty" value="1">
                <input hidden value="{{product.id}}" name="Product">
                <input type="hidden" name="productprice" id="productPrice" value="{{product.SellingPrice}}">
                <button type="submit" class="flex-c-m stext-101 cl0 size-101 bg3 bor1 hov-btn3 p-lr-15 trans-04 "
                  style="margin-left:0;">
                  Buy Now
                </button>
              </form>
            </div>
            <div class="mt-2">
              <a href="#" style=" margin-left:2rem;margin-top: 2rem ;"
                class="mt-1 fs-30 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 js-addwish-detail tooltip100"
                data-tooltip="Add to Wishlist">

                <button onclick="addtowishlist('{{product.id}}')" type="button"> <i
                    class="zmdi zmdi-favorite"></i></button>
              </a>
            </div>
          </div>

          {{/if}}
        </div>
      </div>
    </div>
  </div>

  <!--  -->
  <div class="flex-w flex-m p-l-100 p-t-40 respon7">
    <div class="flex-m bor9 p-r-10 m-r-11">


    </div>


    </a>
  </div>
  </div>
  </div>
  </div>

  <div class="bor10 m-t-50 p-t-43 p-b-40">
    <!-- Tab01 -->
    <div class="tab01">
      <!-- Nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item p-b-10">
          <a class="nav-link active" data-toggle="tab" href="#description" role="tab">Description</a>
        </li>

      </ul>

      <!-- Tab panes -->
      <div class="tab-content p-t-43">
        <!-- - -->
        <div class="tab-pane fade show active" id="description" role="tabpanel">
          <div class="how-pos2 p-lr-15-md">
            <p class="stext-102 cl6">
              {{product.Description}}
            </p>
          </div>
        </div>

        <!-- - -->


        <!-- - -->

      </div>
    </div>
  </div>
  </div>


</section>






<!-- Back to top -->
<div class="btn-back-to-top" id="myBtn">
  <span class="symbol-btn-back-to-top">
    <i class="zmdi zmdi-chevron-up"></i>
  </span>

</div>
<script src="../vendor/sweetalert/sweetalert.min.js"></script>



<script>
  function addtowishlist(id) {
    const Prodid = id;
    console.log(Prodid);
    $.ajax({
      url: "/add-to-wishlist",
      data: {
        Product: Prodid,
        // Qty: qty,
        // val: val,
      },

      method: "POST",
      success: (response) => {
        if (response.status) {
          swal(response.message, "", "success",)
        }
      },
      // error: {
      //   //   alert('error'),
      // },
    });
  }


  function changeQty(val) {
    let Qty = document.getElementById("quantity").value
    if (val === 1 && Qty === -1) { }
    else {
      let value = parseInt(val) + parseInt(Qty)
      document.getElementById('Qtybuy').value = value;
    }
  }
</script>

</body>

