<html>

<head>
  <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
    crossorigin="anonymous"></script>
</head>

<body>
  <section class="vh-100" style="">
    <br />
    <br />
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100" ;">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border: none;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center   style=" background-color: #EEEEEE">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                  {{#if duplicate}}
                  <p class="text-center  text-danger">user already exist</p>
                  {{/if}}
                  <form class="mx-1 mx-md-4" method="post" action="/signup" id="form1" novalidate>

                    <div class="d-flex flex-row align-items-center mb-4" style="border:none;">
                      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="text" size="100%" id="form3Example1c" class="form-control" placeholder="Your Name"
                          name="Name" />

                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="email" size="100%" id="form3Example3c" class="form-control"
                          placeholder="Your Email" name="email" />

                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="tel" size="100%" id="form3Example4c" class="form-control" placeholder="Mobile"
                          name="Mobile" />

                      </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="password" size="100%" id="form3Example4c" class="form-control"
                          placeholder="Password" name="Password" />

                      </div>
                    </div>

                    <div class="ms-2 d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="password" size="100%" id="form3Example4cd" class="form-control"
                          placeholder="Repeat your password" name="confirmPass" />

                      </div>
                    </div>



                    <div class="d-flex  justify-content-center mx-4 mb-3 mb-lg-4">
                      <button type="submit" class="btn btn-outline-primary btn-block">Submit</button>
                    </div>

                  </form>

                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/additional-methods.min.js"></script>
  <script>


    $(document).ready(function () {
      $("#form1").validate({
        rules: {
          Name: {
            required: true,
            minlength: 5,
            lettersonly: true
          },
          email: {
            required: true,
            email: true,
            noCaps: true

          },
          Mobile: {
            required: true,
            minlength: 10,
            maxlengh: 10

          },
          Password: {
            required: true,
            minlength: 5
          },
          confirmPass: {
            required: true,
            minlength: 5,
            equalTo: "#Password"
          }
        },
        messages: {
          Name: {
            required: "Please Enter your name",
            minlength: "Atleast 5 letters",
            lettersonly: "Only Letters"
          },
          email: {
            required: "Please Enter your email ID",
            email: "Enter a valid Email ID",
            noCaps: "Only Lower Case"
          },
          Mobile: {
            required: "Please Enter Your Mobile",
            minlength: "Minimum 10 numbers",
            maxlengh: "Maximum 10 numbers"
          },
          Password: {
            required: "Please Enter your password",
            minlength: "Minimum 5 charactors in password"
          },
          confirmPass: {
            required: "Confirm your password",
            minlength: "Minimum 5 charactor in password",
            equalTo: "Enter the same password again"
          }
        }

      });
    });
  </script>

</body>